@model List<ResultFooterAddressDto>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<script>
    $(document).ready(function () {
        $('#btn1').click(function () {
            swal("Şartlar & Koşullar", "CarBook hizmetlerini kullanarak, araç kiralama kurallarını ve kullanıcı sözleşmesini kabul etmiş olursunuz.");
        });

        $('#btn2').click(function () {
                swal("Güvenlik", "Kişisel bilgileriniz ve ödeme verileriniz, güvenli bağlantılarla korunur ve üçüncü taraflarla paylaşılmaz.");
        });

        $('#btn3').click(function () {
                swal("Çerez Politikası", "Size daha iyi bir deneyim sunabilmek için çerezler kullanıyoruz. Tarayıcı ayarlarınızdan çerez kullanımını yönetebilirsiniz.");
        });

        $('#btn4').click(function () {
            swal("Sıkça Sorulan Sorular", "Kiralama süreci, iptal koşulları, ödeme yöntemleri ve teslimat gibi konular hakkında sıkça sorulan soruları burada bulabilirsiniz.");
        });

          $('#btn5').click(function () {
            swal("Ödeme Yöntemleri", "Tüm ödemelerinizi kredi kartı, banka kartı veya mobil ödeme seçenekleriyle güvenli bir şekilde gerçekleştirebilirsiniz.");
        });

        $('#btn6').click(function () {
            swal("Nasıl Çalışır", "CarBook’ta araç kiralamak çok kolay! Aracını seç, tarihleri belirle, rezervasyonunu tamamla ve aracı belirlenen lokasyondan teslim al.");
        });
    });
</script>

@foreach (var item in Model)
{
    <footer class="ftco-footer ftco-bg-dark ftco-section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2"><a href="#" class="logo">Car<span>book</span></a></h2>
                        <p>@item.Description</p>
                        <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                            <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                            <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                            <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4 ml-md-5">
                        <h2 class="ftco-heading-2">Hızlı Linkler</h2>
                        <ul class="list-unstyled">
                            <li><a href="/About/Index/" class="py-2 d-block">Hakkımızda</a></li>
                            <li><a href="/Service/Index/" class="py-2 d-block">Hizmetlerimiz</a></li>
                            <li><a href="#" id="btn1" class="py-2 d-block">Şartlar & Koşullar</a></li>
                            <li><a href="#" id="btn2" class="py-2 d-block">Güvenlik</a></li>
                            <li><a href="#" id="btn3" class="py-2 d-block">Çerez Politikası</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Müşteri Desteği</h2>
                        <ul class="list-unstyled">
                            <li><a href="#" id="btn4" class="py-2 d-block">Sıkça Sorulan Sorular</a></li>
                            <li><a href="#" id="btn5" class="py-2 d-block">Ödeme Yöntemleri</a></li>
                            <li><a href="/CarPricing/Index/" class="py-2 d-block">Kiralama</a></li>
                            <li><a href="#" id="btn6" class="py-2 d-block">Nasıl Çalışır</a></li>
                            <li><a href="/Contact/Index/" class="py-2 d-block">Bize Yazın</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md">
                    <div class="ftco-footer-widget mb-4">
                        <h2 class="ftco-heading-2">Bir sorunuz mu var?</h2>
                        <div class="block-23 mb-3">
                            <ul>
                                <li><span class="icon icon-map-marker"></span><span class="text">@item.Address</span></li>
                                <li><a href="#"><span class="icon icon-phone"></span><span class="text">@item.Phone</span></a></li>
                                <li><a href="#"><span class="icon icon-envelope"></span><span class="text">@item.Email</span></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center">

                    <p>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
